{
    "name": "jianjye/laravel-basic-search",
    "description": "Provide simple search services for laravel application",
    "keywords": [
        "jianjye",
        "laravel-basic-search"
    ],
    "homepage": "https://github.com/jianjye/laravel-basic-search",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "See Jian Jye",
            "email": "seejianjye+composer@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2.5|^8.0.0"
    },
    "require-dev": {
        "calebporzio/sushi": "^2.0",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^8.5",
        "nesbot/carbon": "^2.31"
    },
    "autoload": {
        "psr-4": {
            "JianJye\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "JianJye\\LaravelBasicSearchServiceProvider"
            ]
        }
    }
}
